<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardElevation="10dp"
    android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="28dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/green"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:id="@+id/card_filter1"
                android:layout_gravity="center"
                android:layout_marginStart="10dp">
                <Button
                    android:id="@+id/filter1"
                    android:layout_width="56dp"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="@string/filter1"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="28dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:id="@+id/card_filter2"
                android:layout_gravity="center"
                android:layout_marginStart="20dp">
                <Button
                    android:id="@+id/filter2"
                    android:layout_width="56dp"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="@string/filter2"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="28dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/orange"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:id="@+id/card_filter3"
                android:layout_gravity="center"
                android:layout_marginStart="20dp">
                <Button
                    android:id="@+id/filter3"
                    android:layout_width="56dp"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="@string/filter3"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="28dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/Depremred"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:id="@+id/card_filter4"
                android:layout_gravity="center"
                android:layout_marginStart="20dp">
                <Button
                    android:id="@+id/filter4"
                    android:layout_width="56dp"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="@string/filter4"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="28dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/blue_"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:id="@+id/card_filter5"
                android:layout_gravity="center"
                android:layout_marginStart="20dp">
                <Button
                    android:id="@+id/filter5"
                    android:layout_width="56dp"
                    android:layout_height="28dp"
                    android:textSize="16sp"
                    android:text="HEPSÄ°"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@android:color/transparent"
                    android:padding="0dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="28dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/orange"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:id="@+id/card_filter_tamam"
            android:layout_gravity="center"
            android:layout_marginStart="20dp">
            <Button
                android:id="@+id/tamam"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:textSize="16sp"
                android:text="TAMAM"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:padding="0dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>